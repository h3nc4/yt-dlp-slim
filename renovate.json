{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "reviewers": ["h3nc4"],
  "assignAutomerge": true,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "description": "Auto-merge all minor, patch, pin, and digest updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "description": "Group yt-dlp updates",
      "groupName": "yt-dlp",
      "matchDepNames": [
        "yt-dlp/yt-dlp"
      ]
    }
  ],
  "customManagers": [
    {
      "description": "Update yt-dlp version in Dockerfiles",
      "customType": "regex",
      "managerFilePatterns": [
        "/^Dockerfile$/",
        "/^alpine\\.Dockerfile$/"
      ],
      "matchStrings": [
        "ARG YT_DLP_VERSION=\"(?<currentValue>.*?)\""
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "yt-dlp/yt-dlp",
      "versioningTemplate": "regex:^(?<major>\\d{4})\\.(?<minor>\\d{2})\\.(?<patch>\\d{2})$"
    }
  ]
}
